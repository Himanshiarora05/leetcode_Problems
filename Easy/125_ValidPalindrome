class Solution {
public:
    bool helper(string &s, int i, int j) {
        if (i >= j) return true;
        if (s[i] != s[j]) return false;
        return helper(s, i + 1, j - 1);
    }

    bool isPalindrome(string s) {
        string filtered = "";
        for (char c : s) {
            if (isalnum(c))
                filtered += tolower(c);
        }
        return helper(filtered, 0, filtered.length() - 1);
    }
};
